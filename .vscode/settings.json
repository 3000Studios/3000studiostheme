{
    "// Copyright (c) 2025 3000 Studios. All Rights Reserved.": "",
    // ========= AI & AUTOPILOT =========
    "CodeGPT.apiKey": "Google AI Studio",
    "CodeGPT.autoSend": true,
    "CodeGPT.generateDocstring": true,
    "CodeGPT.response.autoScroll": true,
    "CodeGPT.chat.autoExecuteCommands": true,
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": true,
        "markdown": true,
        "php": true,
        "javascript": true,
        "typescript": true,
        "json": true
    },
    "github.copilot.inlineSuggest.enable": true,
    "github.copilot.editor.enableAutoCompletions": true,
    "github.copilot.advanced": {
        "inlineSuggestCount": 10,
        "autocompleteOnSelect": true
    },
    "editor.inlineSuggest.enabled": true,
    "editor.suggest.showSnippets": true,
    "editor.suggest.showWords": true,
    "editor.suggestOnTriggerCharacters": true,
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    // ========= FULL AUTO-MODE =========
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    // Disable ALL confirmation prompts
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "security.promptForWorkspaceTrust": false,
    "window.dialogStyle": "custom",
    "workbench.startupEditor": "none",
    // ========= GIT AUTOPILOT =========
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.postCommitCommand": "push",
    "git.autoRepositoryDetection": "openEditors",
    "git.openRepositoryInParentFolders": "always",
    // ========= TERMINAL AUTO-APPROVAL =========
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "terminal.integrated.autoReplies": {
        "Terminate batch job (Y/N)?": "Y",
        "Are you sure?": "Y",
        "Proceed?": "Y",
        "Continue?": "Y"
    },
    // Auto-approve tools
    "chat.tools.terminal.autoApprove": {
        "*": true,
        "git add": true,
        "git commit": true,
        "git push": true,
        "npm install": true,
        "npm run": true,
        "composer install": true,
        "powershell": true,
        "node": true,
        "where.exe": true
    },
    // ========= LANGUAGES =========
    // PHP
    "php.validate.enable": true,
    "php.validate.run": "onSave",
    "php.validate.executablePath": "",
    // JavaScript/TypeScript
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.suggest.autoImports": true,
    "typescript.suggest.autoImports": true,
    // ========= FILE / SEARCH OPTIMIZATION =========
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/.hg/store/**": true,
        "**/*.backup.*": true,
        "**/*.zip": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.backup.*": true,
        "**/*.zip": true
    },
    // ========= PERFORMANCE & UI =========
    "editor.fontLigatures": true,
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.largeFileOptimizations": false,
    "workbench.colorTheme": "Default Dark Modern",
    "workbench.tips.enabled": false,
    "breadcrumbs.enabled": true,
    "editor.minimap.enabled": true
}
