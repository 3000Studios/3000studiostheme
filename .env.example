# 3000 Studios Theme Environment Variables
# Copy this file to .env and configure your settings

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# WordPress Configuration
WP_HOME=http://localhost/3000studios
WP_SITEURL=http://localhost/3000studios

# Development Mode
NODE_ENV=development

# Server Configuration
REFRESH_SERVER_PORT=8080

# SSH Deployment (Optional - for auto-deploy)
WP_SSH_HOST=access-5018843677.webspace-host.com
WP_SSH_USER=a2413152
WP_SSH_PASSWORD=your_password_here
WP_SSH_PORT=22

# API Keys (Optional)
PEXELS_API_KEY=your_pexels_key_here
UNSPLASH_ACCESS_KEY=your_unsplash_key_here

# Payment Integration - 3000 Studios Monetization
# Stripe (Credit/Debit Cards)
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here

# PayPal (PayPal Payments)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox # Change to 'live' for production

# Cash App (Peer-to-peer payments)
CASHAPP_CASHTAG=$3000Studios

# Cryptocurrency (Bitcoin, Ethereum, etc.)
CRYPTO_BTC_WALLET=your_bitcoin_wallet_address_here
CRYPTO_ETH_WALLET=your_ethereum_wallet_address_here

# WooCommerce (if using)
WC_API_KEY=your_woocommerce_api_key_here
WC_API_SECRET=your_woocommerce_api_secret_here
